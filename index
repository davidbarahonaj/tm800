    <div id="modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm hidden">
        <div class="bg-white p-8 rounded-3xl w-full max-w-sm shadow-2xl">
            <h2 class="text-2xl font-black text-slate-800 mb-2">Firebase</h2>
            <p class="text-slate-500 text-sm mb-6">Ingresa las credenciales de tu base de datos Realtime.</p>
            <input type="text" id="dbUrl" placeholder="https://tu-db.firebaseio.com/" class="w-full border-2 border-slate-100 rounded-xl p-3 mb-4 outline-none focus:border-blue-500 font-semibold">
            <input type="password" id="apiKey" placeholder="API Key de Web" class="w-full border-2 border-slate-100 rounded-xl p-3 mb-6 outline-none focus:border-blue-500 font-semibold">
            <button onclick="saveConfig()" class="w-full bg-blue-900 text-white font-black py-4 rounded-xl hover:bg-blue-800 transition">CONECTAR AHORA</button>
        </div>
    </div>

    <script>
        lucide.createIcons();

        function tick() {
            const ahora = new Date();
            document.getElementById('fecha').innerText = ahora.toLocaleDateString();
            document.getElementById('hora').innerText = ahora.toLocaleTimeString();
        }
        setInterval(tick, 1000); tick();

        function toggleModal(s) { document.getElementById('modal').classList.toggle('hidden', !s); }

        function setDBStatus(online) {
            const ind = document.getElementById('db-indicator');
            ind.className = online ? "db-status online" : "db-status offline";
            document.getElementById('db-text').innerText = online ? "Base de Datos: Online" : "Desconectado";
            document.getElementById('ping').className = `animate-ping absolute inline-flex h-full w-full rounded-full opacity-75 ${online?'bg-green-500':'bg-red-500'}`;
            document.getElementById('dot').className = `relative inline-flex rounded-full h-2 w-2 ${online?'bg-green-600':'bg-red-600'}`;
        }

        function actualizarInterfaz(val) {
            document.getElementById('valor-display').innerText = val;
            const perc = Math.min((val / 100) * 100, 100); // Ajustado a escala EMG
            document.getElementById('progress').style.width = perc + "%";
        }

        function actualizarMano(abierta) {
            const icon = document.getElementById('mano-i');
            const banner = document.getElementById('banner');
            const box = document.getElementById('mano-box');

            if(abierta) {
                icon.className = "fa-solid fa-hand text-green-500";
                banner.className = "w-full py-2 rounded-lg bg-green-500 text-white font-black text-xs mb-6";
                banner.innerText = "MANO ABIERTA - CONTRACCIÓN";
                box.style.transform = "scale(1.1)";
            } else {
                icon.className = "fa-solid fa-hand-fist text-slate-300";
                banner.className = "w-full py-2 rounded-lg bg-slate-100 text-slate-500 font-black text-xs mb-6";
                banner.innerText = "MANO CERRADA - REPOSO";
                box.style.transform = "scale(1)";
            }
        }

        function saveConfig() {
            const url = document.getElementById('dbUrl').value;
            const key = document.getElementById('apiKey').value;
            if(url && key) {
                localStorage.setItem('fb_url', url);
                localStorage.setItem('fb_key', key);
                window.initFirebase(key, url);
                toggleModal(false);
                Swal.fire('Conectado', 'Sincronizando con ESP32...', 'success');
            }
        }

        // Auto-conectar si ya existen datos
        window.onload = () => {
            const url = localStorage.getItem('fb_url');
            const key = localStorage.getItem('fb_key');
            if(url && key) window.initFirebase(key, url);
        };
    </script>
</body>
